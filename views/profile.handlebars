<!doctype html>
<meta name ="viewport" content="width=device-width,initial-scale= 1.0">

<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
  <!-- for icon library-->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

  <link href="/css/introHCI.css" rel="stylesheet">
  <!--<script src="/js/introHCI.js"></script>-->
  {{>facebook}}
  <script src="/js/facebook.js"></script>
  {{>google}}
</head>

<body>
  <!-- This is the top panel of website with bottom -->
  {{>header}}
  
  
  <!--start of Last Advice-->
  <div class="container">
    <div style="border: 2px; border-style: solid; border-color: #E6E6E6; margin-top: 20px;">
      <center>
      <h2 style="color: #53B8D1">Profile</h2>
    </center>
    </div>


      <center>
      <div id="fb" class="profile">
      <img id="facebookPhoto" class='img-responsive' width = "200" height = "200"/>
    </div>
    </center>
      <hr>

      <p id="profileName" style="float: right; ">Carlo Lopez De La Fuente</p>
      <h3>Name</h3>
      <hr>

      
      <h4>Personal Goal</h4>
      {{#each goals}}
        <ul style="text-align: right">{{goalContext}}</ul>  
      {{/each}}


      <!--collapsible Add new Personal Goal button-->
      <!--<button class="collapsible" style="width: 40px; height: 25px; border-radius: 4px; bumper: 10px; float: left; cursor: pointer;">+</button>

        <div class="content" style="padding: 0 18px; display: none; overflow: hidden;">-->

      <!--Add new Personal Goal button-->
          <form id="addFriendForm" role="form" method="get" action="/add" style="padding: 15px 0">
      
          <div class="form-group">
          <label for="goalContext">Add Goal:</label>
          <input type="text" class="form-control" id="name" placeholder="Ex: Create more friends" name="goalContext">
        </div>
        <center>
        <input type="submit" id="submitBtn" class="btn btn-default" value="Add"></input>
        </center>
          </form>

          <hr>
          <!-- Go to tutorial -->
          <input type="button" class="center-block"id="seeIntro" value="Tutorial" onclick="window.location.href='/intro';">

          <!-- Logout -->
            <input type=button onclick="window.location.href='/';" class= "center-block storyTypeButton" value="Logout" style="margin-bottom: 20px">
        </div>
  </div>

  <!-- this is the bottom navbar-->
  {{>navbar}}

  <!--this is the imported script-->
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/profileFB.js"></script>
  <script src="/js/navbarColor.js"></script>
</body>
</html>
