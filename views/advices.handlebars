<!doctype html>
<meta name ="viewport" content="width=device-width,initial-scale= 1.0">

<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
  <!-- for icon library-->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

  <link href="/css/introHCI.css" rel="stylesheet">
</head>

<body>
  <!-- This is the top panel of website with bottom -->
  {{>header}}
  
  <!--start of Last Advice-->
  <div class="container">
    <div  style="border: 2px; border-style: solid; border-color: #E6E6E6; margin-top: 20px;">
      <h2 style="color: #53B8D1; padding-left: 20px;">Last Advice:</h2>

      <h4 id="logTitle" style="padding-left: 20px;">
        You logged: NEW FRIEND TROUBLE
      </h4>

        <p id="lastAdvice" style="padding-left: 35px; color: #6B6B6C;">
          "Why wait for them to approach you? Start a conversation. It will only give you answers."
        </p>
      <!--Last advice: complete button-->
      <button class="collapsible" id="completeLastAdvice" style="float: left; border-radius: 2px; width: 165px; padding:2px 4px; background-color: #E6E6E6; color: #6E6E6E; text-align: center;"> I DID IT!
      </button>
        <div id="contentCompleteAdvice" class="content">
          <br><br>
          <p>This advice:</p>
          <form action="/action_page.php" method="get" style="margin-left: 20px;">
            <input type="checkbox" name="" value="Good">Solved my problem<br>
            <input type="checkbox" name="vehicle" value="Decent">Only helped slightly<br>
            <input type="checkbox" name="" value="Bad">Made the problem worse<br>
            <input id="submitBtnDidIt" type="submit" value="Submit">
          </form>
        </div>

      <!--Last advice: incomplete button-->
      <button class="collapsible" id="NoToLastAdvice" style="float: right; border-radius: 2px; width: 165px; padding:2px 4px; background-color: #E6E6E6; color: #6E6E6E; text-align: center;"> DELETE 
      </button>
        <div id="contentNotCompleteAdvice" class="content">
          <br><br>
          <p>Why didn't you do it?</p>
          <form action="/action_page.php" method="get" style="margin-left: 20px;">
            <input type="checkbox" name="" value="Irrelevant">It doesn't apply<br>
            <input type="checkbox" name="vehicle" value="Dislike">Don't like it<br>
            <input type="checkbox" name="" value="Tried before">Have already tried it<br>
            <input type="checkbox" name="" value="N/a">Don't want to do it<br>
            <input id="submitBtnDelete" type="submit" value="Submit">
          </form>
        </div>
      <!-- Collapsible example
      <button class="collapsible">I did it!</button>
        <div class="content">
          <form id="addFriendForm" role="form" method="get" action="/add" style="padding: 15px 0">
      
          <div class="form-group">
          <label for="goalContext">Add Goal:</label>
          <input type="text" class="form-control" id="name" placeholder="Ex: Create more friends" name="goalContext">
        </div>
        
        <input type="submit" id="submitBtn" class="btn btn-default" value="Add"></input>
          </form>
        </div>
      -->

    </div>
    <hr>

    <!--Past Advice Section-->
    <h4 style="float: right;">sort by: DATE</h4>
    <h3 style="color: #53B8D1">Past Advice</h3>
    {{#each advices}}
      <hr>
      <p style="float: right; color: #E6E6E6;">{{date}}</p>
      <h5>{{type}}</h5>
        <p style="color: #6B6B6C;">{{description}}</p>
    {{/each}}
  </div>
  <!-- this is the bottom navbar-->
  {{>navbar}}
  
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/adviceDelete.js"></script>
  <script src="/js/navbarColor.js"></script>

  <!-- Hide other button if you click complete/delete last advice -->
  <script type="text/javascript">
    $('#completeLastAdvice').click(function(){
        $("#NoToLastAdvice").hide();
    });
  </script>
  <script type="text/javascript">
    $('#NoToLastAdvice').click(function(){
        $("#completeLastAdvice").hide();
    });
  </script>
  <!-- makes collapsible work-->
  <script>
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
       coll[i].addEventListener("click", function() {
        this.classList.toggle("active");
        var content = this.nextElementSibling;
          if (content.style.display === "block") {
             content.style.display = "none";
          } else {
            content.style.display = "block";
            }
         });
        }
  </script>
</body>
</html>
